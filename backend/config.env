# Configuração de Ambiente
# Copie este arquivo para .env.development, .env.production, etc.

# Ambiente
NODE_ENV=development

# Servidor
PORT=3000

# Banco de Dados
DATABASE_URL=file:./dev.db

# JWT
JWT_SECRET=sua-chave-secreta-super-segura-2025
JWT_EXPIRES_IN=7d

# CORS
FRONTEND_URL=http://localhost:4200

# Logs
LOG_LEVEL=debug
ENABLE_LOGGING=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Segurança
ENABLE_RATE_LIMIT=true
ENABLE_HELMET=true
ENABLE_CORS=true

# Logs
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/app.log

# Prisma
PRISMA_LOG_QUERIES=true
PRISMA_LOG_ERRORS=true
